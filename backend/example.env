# Supabase (Settings → Database → Connection String)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxxxx.supabase.co:5432/postgres

# Supabase API - Optional for Storage/Auth/Realtime (Settings → API)
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_KEY=your_anon_key
SUPABASE_SERVICE_KEY=your_service_key

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false

# Application
PROJECT_NAME=Uyren AI Helper
ENVIRONMENT=local
API_V1_STR=/api/v1
FRONTEND_HOST=http://localhost:5173
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Security (generate: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=changethis
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# First Admin User
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis

# Email - Optional
SMTP_HOST=
SMTP_PORT=587
SMTP_TLS=true
SMTP_SSL=false
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@example.com
EMAILS_FROM_NAME=Uyren AI Helper
EMAIL_RESET_TOKEN_EXPIRE_HOURS=48
EMAIL_TEST_USER=test@example.com

# Sentry - Optional
SENTRY_DSN=
